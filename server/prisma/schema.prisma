datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Coffee {
  id          String @id @default(uuid())
  title       String
  description String
  price       Float
  type        Type   @relation(fields: [typeId], references: [id])
  typeId      String
}

model Type {
  id      String   @id @default(uuid())
  title   String   @unique
  coffees Coffee[]
}
